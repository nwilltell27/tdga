<%- include('../partials/header') %>

<section id="discShowPage">
    <div>Brand: </div>
    <div><%= disc.brand %></div>
    <div>Primary Use: </div>
    <div><%= disc.discType %></div>
    <div>Speed: </div>
    <div><%= disc.speed %></div>
    <div>Glide: </div>
    <div><%= disc.glide %></div>
    <div>Turn: </div>
    <div><%= disc.turn %></div>
    <div>Fade: </div>
    <div><%= disc.fade %></div>
</section>
<button><a href="/discs/<%= disc._id %>/edit">Edit Disc Details</a></button>
<form action="/discs/<%= disc._id %>?_method=DELETE" method="POST"">
    <input onclick="return confirm('Delete <%= disc.title %>?')" id="deleteBtn" class="button" type="submit" value="Delete Disc">
</form>

<%- include('../partials/footer') %>